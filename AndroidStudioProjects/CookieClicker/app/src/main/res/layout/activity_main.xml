<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name"
        android:layout_above="@id/lblTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="42sp"

        />


    <ImageView
        android:id="@+id/paperclip"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/paperclip"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0"
        android:layout_above="@id/paperclip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="42sp"/>

    <TextView
        android:id="@+id/lastScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/paperclip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="42sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastScore"
        android:layout_centerHorizontal="true"
        android:onClick="saveScore"
        android:text="@string/save_score"
        android:textSize="42sp" />

</RelativeLayout>